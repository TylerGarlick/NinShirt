<html lang="en" class="no-js">
<!--<![endif]-->
<head>
  <%= yield(:head) %>

	<meta charset="utf-8">
	<meta name="description" content="">
	<meta name="author" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= stylesheet_link_tag "style", "color", "application" %>
	<%= javascript_include_tag "libs/modernizr-1.6.min", "jquery.min", "jquery_ujs", "cufon/cufon-yui", "cufon/Vegur_300-Vegur_700.font", "cufon/cufon-replace", "piecemaker/swfobject" %>

	<%= csrf_meta_tag %>
</head>
<body>
<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id => "flash_#{name}", :class => 'flash' %>
<% end %>
<div class="wrapper">
  <!-- header -->
  <header>
    <div class="wrap">
      <!-- logo -->
      <div class="logo"><%= link_to(image_tag('ninshirt-logo.png', :alt => 'Ninshirt'), root_url) %></div>
      <!-- /logo -->
      <!-- main menu -->
      <nav>
				<%= render :partial => 'shared/top_menu' %>
      </nav>
      <!-- /main menu -->
    </div>
  </header>
  <!-- /header -->
  <!-- page title -->
  <section class="page_title">
    <div class="page_title_inner" >
      <div class="wrap">
        <!-- page title content  -->
        <%= yield :page_title %>
        <!-- /page title content  -->
      </div>
    </div>
  </section>
  <!-- /page title -->
  <!-- content -->
  <section class="content">
    <div class="wrap">
	    <% if content_for?(:breadcrumbs) %>
	      <div class="breadcrumbs"><%= yield :breadcrumbs %></div>
	    <% end %>
      <%= content_for?(:content) ? yield(:content) : yield %>
    </div>
  </section>
  <!-- /content -->
  <!-- footer widgets -->
  <section class="footer_widgets_bg">
    <div class="footer_widgets_height">
      <div class="footer_widgets">
        <div class="wrap">
          <!-- col1 -->
          <div class="col3">
            <h4>Layouts</h4>
            <ul class="txtlist">
              <li ><a title="Left sidebar" href="#">Left sidebar</a></li>
              <li ><a title="Right sidebar" href="#">Right sidebar</a></li>
              <li ><a title="Bottom sidebar" href="#">Bottom sidebar</a></li>
              <li ><a title="Full width" href="#">Full width</a></li>
              <li ><a title="Custom 404" href="#">Custom 404</a></li>
            </ul>
          </div>
          <!-- /col1 -->
          <!-- col2 -->
          <div class="col3">
            <h4>Blogroll</h4>
            <ul  class="txtlist">
              <li><a href="#">Documentation</a></li>
              <li><a href="#">Plugins</a></li>
              <li><a href="#">Suggest Ideas</a></li>
              <li><a href="#">Support Forum</a></li>
              <li><a href="#">Themes</a></li>
              <li><a href="#">WordPress Blog</a></li>
              <li><a href="#">WordPress Planet</a></li>
            </ul>
          </div>
          <!-- /col2 -->
          <!-- col3 -->
          <div class="col3">
            <h4>Recent News</h4>
            <ul>
              <li><a href="#"> Looking for a holiday costume?! Here is the website that was designed with the...</a></li>
              <li><a href="#"> Explicabo. Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit au...</a></li>
              <li><a href="#">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed orci dolor,  conseq...</a></li>
            </ul>
          </div>
          <!-- /col3 -->
          <!-- col4 -->
          <div class="col2">
            <h3>Connects</h3>
            <p>Stay up to date with the latest ThemeForest files  via Email, RSS, Twitter or Facebook.</p>
            <ul class="connect">
              <li><a href="http://twitter.com/olegnax" target="_blank" class="twitter"><span>Twitter</span></a></li>
              <li><a href="#"  class="email"><span>Email</span></a></li>
              <li><a href="#" target="_blank" class="facebook"><span>Facebook</span></a></li>
              <li><a href="#" target="_blank" class="rss"><span>rss</span></a></li>
            </ul>
          </div>
          <!-- /col4 -->
        </div>
      </div>
    </div>
  </section>
  <!-- /footer widgets -->
  <div class="push"></div>
</div>
<!-- footer -->
<footer>
  <div class="wrap">
    <p> &copy; <%= DateTime.now.year %> NinShirt. All rights reserved. </p>
    <nav>
      <ul>
        <li><%= link_to 'Home', root_url %></li>
        <li><%= link_to 'Privacy Policy', root_url %></li>
        <li><%= link_to 'Contact Us', root_url %></li>
      </ul>
    </nav>
  </div>
</footer>
<!-- /footer -->

<!-- scripts concatenated and minified via ant build script-->
<%= javascript_include_tag "superfish/superfish", "coinslider/coin-slider.min", "jquery-validate/jquery.validate.pack", "jquery.qtip-1.0.0-rc3.min", "application" %>
<!--[if lt IE 9  ]> <%= javascript_include_tag "cycle/jquery.cycle.all.min_ie.js" %><![endif]-->
<!--[if  IE 9 | !(IE)]><!-->  <%= javascript_include_tag "cycle/jquery.cycle.all.min.js" %><!--<![endif]-->
<script> Cufon.now(); </script>
<!-- end concatenated and minified scripts-->
<%= yield :javascript %>
</body>
</html>


