<h3><%= user.username %></h3>

<h4>Recent Purchases</h4>

<table>
  <tr>
    <th>Order Number</th>
    <th>Status</th>
    <th>Total</th>
  </tr>
	<% orders.each do |order| %>
    <tr>
      <td><%= link_to order.id, order_url(order) %></td>
      <td><%= order.order_status.name %></td>
      <td><%= number_to_currency(order.total) %></td>
    </tr>
	<% end  %>
</table>



