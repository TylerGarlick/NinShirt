<%= form_for(user, url: profile_url, :method => :put,  html: {  class: "form-horizontal"}) do |f| %>
  <fieldset>
    <legend>Your Profile</legend>
    <div class="control-group">
      <%= f.label :name, "Full Name", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name, class: "span4" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :gender, class: "control-label" %>
      <div class="controls">
        <label class="checkbox inline">
          <%= f.radio_button :gender, "Male" %> Male
        </label>
        <label class="checkbox inline">
          <%= f.radio_button :gender, "Female" %> Female
        </label>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :birthday, class: "control-label" %>
      <div class="controls">
        <%= f.date_select :birthday, :order => [:month, :day, :year], :start_year => Time.now.year - 100 %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :country, class: "control-label" %>
      <div class="controls">
        <%= f.country_select :country, {priority: %w(US CA)}, prompt: 'Please select a country' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :state, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :state, class: "span4" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :url, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :url, class: "span4" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :is_public, "Public Profile", class: "control-label" %>
      <div class="controls">
        <%= f.check_box :is_public %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Save Profile", class: "btn btn-primary" %>
      <button class="btn">Cancel</button>
    </div>
  </fieldset>
<% end %>